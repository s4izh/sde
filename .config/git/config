[user]
    email = "sergio.sanz.martinez@proton.me"
    name = "s4izh"
[core]
    ; pager = delta
    editor = nvim
[init]
    defaultBranch = "main"
[diff]
    algorithm = patience
    compactionHeuristic = true
    tool = nvimdiff
[difftool "nvimdiff"]
    cmd = nvim -d \"$LOCAL\" \"$REMOTE\" -c \"wincmd w\" -c \"wincmd L\"
[merge]
    tool = nvimdiff4
    prompt = false
[mergetool "nvimdiff4"]
    cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[mergetool]
    keepBackup = false
[delta]
    features = side-by-side line-numbers decorations
    navigate = true
    whitespace-error-style = 22 reverse
[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none
[interactive]
    diffFilter = delta --color-only
[alias]
    abbrev = !bash -c 'git rev-parse --short ${1-`echo HEAD`}' -
    ack = grep --break --heading
    amend = commit --amend -v
    both = diff --ignore-submodules=dirty HEAD
    br = branch
    ci = commit -v
    co = checkout
    count = !git --no-pager log --oneline | wc -l
    cp = cherry-pick
    delta = "!f() { git diff \"$@\" | delta; }; f"
    graph = "--paginate log --graph --oneline"
    pr = "pull --rebase"
    pwd = "rev-parse --show-prefix"
    st = status
[pull]
    rebase = true
